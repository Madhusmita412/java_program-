import java.util.Scanner;

public class SumFirstLastDigit {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter a positive integer: ");
        String s = sc.next();

        int sum = 0;

        if (s.length() == 1) {
            // Only one digit: treat first = last
            int d = Character.getNumericValue(s.charAt(0));
            sum = d + d;
        } else {
            int first = Character.getNumericValue(s.charAt(0));
            int last  = Character.getNumericValue(s.charAt(s.length() - 1));
            sum = first + last;
        }

        System.out.println("Output: " + sum);

        sc.close();
    }
}
